<Window x:Class="SurveyManagerApp.Views.TakeSurveyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пройти опрос" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="{Binding Survey.Title}" FontWeight="Bold" FontSize="18" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding Survey.Description}" FontStyle="Italic" TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
            <ItemsControl ItemsSource="{Binding QuestionControls}">
                <!-- Убран ItemTemplate -->
            </ItemsControl>
        </ScrollViewer>

        <Button Grid.Row="2" Content="Отправить ответы" Click="SubmitButton_Click" HorizontalAlignment="Center" Padding="30,10" Margin="0,10,0,0"/>
        <!-- Убрано Command, добавлено Click -->
    </Grid>
</Window>