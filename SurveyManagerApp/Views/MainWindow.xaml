<Window x:Class="SurveyManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер опросов" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Создать новый опрос" FontWeight="Bold" />
            <TextBox x:Name="NewSurveyTitleTextBox" Text="{Binding NewSurveyTitle, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox x:Name="NewSurveyDescriptionTextBox" Text="{Binding NewSurveyDescription, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" Height="50"/>
            <Button Content="Новый опрос" Command="{Binding NewSurveyCommand}" Margin="0,5,0,0"/>
        </StackPanel>

        <ListBox Grid.Row="1" ItemsSource="{Binding Surveys}" SelectedItem="{Binding SelectedSurvey}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="2">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ОБНОВЛЁННАЯ панель кнопок -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Редактировать" Command="{Binding EditSurveyCommand}" Margin="0,0,10,0" IsEnabled="{Binding SelectedSurvey, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="Пройти" Command="{Binding TakeSurveyCommand}" Margin="0,0,10,0" IsEnabled="{Binding SelectedSurvey, Converter={StaticResource NullToBoolConverter}}"/>
            <!-- НОВАЯ кнопка "Экспорт" -->
            <Button Content="Экспорт" Command="{Binding ExportSurveyCommand}" Margin="0,0,10,0" IsEnabled="{Binding SelectedSurvey, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="Удалить" Command="{Binding DeleteSurveyCommand}" IsEnabled="{Binding SelectedSurvey, Converter={StaticResource NullToBoolConverter}}"/>
        </StackPanel>
    </Grid>
</Window>