<Window x:Class="SurveyManagerApp.Views.EditSurveyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать опрос" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Заголовок:"/>
            <TextBox Text="{Binding Survey.Title, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Описание:"/>
            <TextBox Text="{Binding Survey.Description, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
        </StackPanel>

        <GroupBox Grid.Row="1" Header="Вопросы" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Grid.Row="0" ItemsSource="{Binding Survey.Questions}" SelectedItem="{Binding SelectedQuestion}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="MinHeight" Value="40"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="Margin" Value="0,2,0,2"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="5" Margin="2">
                                <StackPanel>
                                    <TextBlock Text="{Binding Text}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Type, Converter={StaticResource QuestionTypeToStringConverter}}" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Добавить вопрос" Command="{Binding AddQuestionCommand}" Margin="0,5,10,5"/>
                    <Button Content="Удалить вопрос" Command="{Binding RemoveQuestionCommand}" Margin="0,5,10,5" IsEnabled="{Binding SelectedQuestion, Converter={StaticResource NullToBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Редактировать вопрос" Margin="0,10,0,0" Visibility="{Binding SelectedQuestion, Converter={StaticResource ObjectToVisibilityConverter}}">
            <StackPanel>
                <Label Content="Текст вопроса:"/>
                <TextBox Text="{Binding SelectedQuestion.Text, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Тип вопроса:"/>
                <ComboBox ItemsSource="{Binding QuestionTypes}" SelectedItem="{Binding SelectedQuestion.Type, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="."/>
                <ItemsControl ItemsSource="{Binding SelectedQuestion.Options}" Margin="10,5,0,5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding .}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <Button Content="X" Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.RemoveOptionCommand}" CommandParameter="{Binding .}" Padding="3" Width="20" Height="20" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="NewOptionTextBox" Margin="10,0,5,0" Width="200"/>
                    <Button Content="Добавить вариант" Command="{Binding AddOptionCommand}" CommandParameter="{Binding ElementName=NewOptionTextBox, Path=Text}" Margin="0,0,5,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,0,10,0" Padding="20,5"/>
            <!-- Убрано Command, добавлено Click -->
            <Button Content="Отмена" Click="CancelButton_Click" Padding="20,5"/>
        </StackPanel>
    </Grid>
</Window>